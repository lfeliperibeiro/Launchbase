 {% extends "layout.njk"%}
   {% block title %}
   <title>Cursos</title>
   {% endblock title %}
  {% block content %}
  
    <section class="cards">
      <div class="card" id="starter">
       <div class="card-image-container">
          <img src="./img/starter.svg" />
        </div>
        <div class="card-content">
          <p><span class="purple">Torne-se um programador desejado</span> no mercado com esses cursos gratuitos</p>
        </div>
        <div class="card-info">
          <p class="modulos">5 módulos</p>
          <p class="card-modules">Gratuito</p>
        </div>
      </div>

      <div class="card" id="launchbase">
        <div class="card-image-container">
          <img src="./img/launchbase.svg" />
        </div>
        <div class="card-content">
          <p><span class="orange">Domine programação do zero</span> e tenha acesso às melhores oportunidades</p>
        </div>
        <div class="card-info">
          <p class="modulos">18 módulos</p>
          <p class="card-modules">pago</p>
        </div>
      </div>

      <div class="card" id="gostack">
        <div class="card-image-container">
          <img src="./img/gostack.svg" />
        </div>
        <div class="card-content">
          <p><span class="green">Treinamento imersivo </span>nas tecnologias mais modernas de desenvolvimento</p>
        </div>
        <div class="card-info">
          <p class="modulos">18 módulos</p>
          <p class="card-modules">pago</p>
        </div>
      </div>          
    </section>
    <div class="modal-overlay">
        <div class="modal">
          <a class="close-modal">
              <i class="material-icons">close</i>
          </a>
          <a class="maximize-modal">
          <i class="material-icons">maximize</i>
          </a>
          <a class="minimize-modal">
          <i class="material-icons">minimize</i>
          </a>
          <div class="modal-content">
              <iframe src="" frameborder="0"></iframe>
          </div>
        </div>
    </div>

  {% endblock content %} 
    
    <script src="./script.js"></script>
  