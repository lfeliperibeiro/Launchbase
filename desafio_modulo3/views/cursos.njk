{% extends "layout.njk"%}
{% block title %}
  <title>Cursos</title>
{% endblock title %}
{% block content %}

  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card-image-container">
          <img src="./img/{{item.id}}.svg"/>
        </div>
        <div class="card-content">
          <p>
            <span class="purple">{{item.title}}</p>
        </div>
        <div class="card-info">
          <p class="modulos">{{item.text}}</p>
          <p class="card-modules">{{item.price}}</p>
        </div>
      </div>
    {% endfor %} 
</section>
<div class="modal-overlay">
  <div class="modal">
    <a class="close-modal">
      <i class="material-icons">close</i>
    </a>
    <a class="maximize-modal">
      <i class="material-icons">maximize</i>
    </a>
    <a class="minimize-modal">
      <i class="material-icons">minimize</i>
    </a>
    <div class="modal-content">
      <iframe src="" frameborder="0"></iframe>
    </div>
  </div>
</div>

{% endblock content %}

<script src="./script.js"></script>